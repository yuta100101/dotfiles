[core]
	editor = vim
        quotepath = false
        ignorecase = false
        filemode = false
[alias]
        ss = status
        ck = checkout
        cm = commit
        lol = log --graph --oneline --remotes --branches --decorate=auto --all
        br = branch
        fixit = commit --amend --no-edit
        fol = !git fetch && git lol
	sha = "!f() { git rev-parse \"${1-HEAD}\"; }; f"
        unadd = restore --staged
[fetch]
        prune = true
[submodule]
        recurse = true
[color "grep"]
        match = red
        linenumber = bold white
        filename = yellow
